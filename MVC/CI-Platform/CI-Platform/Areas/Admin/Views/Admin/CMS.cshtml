
@model CI_Platform.Entities.AdminModels.CMSView;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/CRUD.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Admin Dashboard</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div  id="sidebar-wrapper" style="background-color: #F88634;">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase">Navigation</div>
            <div class="list-group list-group-flush my-3">
                <button onclick="location.href='@Url.Action("Users", "Admin")'" id="#user" class="list-group-item list-group-item-action second-text @(ViewBag.nav == 1? "active":" bg-transparent")">
                    <i class="bi bi-person-fill me-2"></i>User
                </button>
                <button onclick="location.href='@Url.Action("CMS", "Admin")'" id="#cmspage" class="list-group-item list-group-item-action  second-text @(ViewBag.nav == 2? "active":" bg-transparent")" ">
                    <i class="bi bi-file-earmark-text-fill me-2"></i>CMS Page
                </button>
                <button onclick="location.href='@Url.Action("Mission", "Admin")'" id="#mission" class="list-group-item list-group-item-action   second-text @(ViewBag.nav == 3? "active":" bg-transparent")">
                    <i class="bi bi-bullseye me-2"></i>Mission
                </button>
                <button onclick="location.href='@Url.Action("Theme", "Admin")'" asp-action="Theme" asp-controller="Admin" id="#theme" class="list-group-item list-group-item-action   second-text @(ViewBag.nav == 4? "active":" bg-transparent")">
                    <i class="bi bi-grid-1x2-fill me-2"></i>Mission Theme
                </button>
                <button onclick="location.href='@Url.Action("Skill", "Admin")'" asp-action="Skill" asp-controller="Admin" id="#skill" class="list-group-item list-group-item-action   second-text @(ViewBag.nav == 5? "active":" bg-transparent")">
                    <i class="bi bi-tools me-2"></i>Mission Skill
                </button>
                <button onclick="location.href='@Url.Action("Application", "Admin")'" asp-action="Application" asp-controller="Admin" id="#application" class="list-group-item list-group-item-action   second-text @(ViewBag.nav == 6? "active":" bg-transparent")">
                    <i class="bi bi-folder-fill me-2"></i>Mission Application
                </button>
                <button onclick="location.href='@Url.Action("Story", "Admin")'" asp-action="Story" asp-controller="Admin" id="#story" class="list-group-item list-group-item-action   second-text @(ViewBag.nav == 7? "active":" bg-transparent")">
                    <i class="bi bi-bookmark-star-fill me-2"></i>Story
                </button>
                <button onclick="location.href='@Url.Action("Banner", "Admin")'" asp-action="Banner" asp-controller="Admin" id="#banner" class="list-group-item list-group-item-action   second-text @(ViewBag.nav == 8? "active":" bg-transparent")">
                    <i class="bi bi-book-fill me-2"></i>Banner Management
                </button>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-2 px-2 adminnavbar">
                <div class="d-flex align-items-center">
                    <img src="/CI-Imgs/menu-bar.svg" class=" primary-text fs-4 me-3" alt="" id="menu-toggle" />
                    <p class="m-0" id="dashboadtime"></p>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="/CI-Imgs/user-img-large.png" alt="" class="adminimg">
                                John Doe
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid px-4">
                <div id="content">
                    <section id="cmspage"  class="row my-3 content-section">
                        <div class="border-bottom">
                            <span class="text-muted fs-4" style="border-bottom: 3px solid black !important; padding-bottom:2px;">CMS Page</span>
                        </div>
                        <div class="modal fade" id="exampleModalcmsadd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <form asp-asp-area="Admin" asp-controller="Admin" asp-action="CMS" method="post">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                      <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">CMS Add</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="cmsclose"></button>
                                      </div>
                                      <div class="modal-body">
                                            <input type="hidden" name="CmsPageId" id="cmsid" asp-for="CmsPageId" />

                                        <label for="title">Page Title</label>
                                            <input type="text" class="form-control" name="Title" placeholder="Enter page title" id="title" asp-for="Title">

                                        <label for="page description" class="mt-2">Page Description</label>
                                            <textarea name="editor1" class="form-control" id="editor1" name="Description" asp-for="Description"></textarea>

                                        <label for="slug" class="mt-2">Slug</label>
                                        <input type="text" class="form-control" placeholder="Enter slug" id="slug" name="Slug" asp-for="Slug">

                                        <label for="status" class="mt-2">Status</label>
                                        <select class="form-control form-select" id="cmsstatus" name="Status" asp-for="Status">
                                                <option></option>
                                                <option value="Active">Active</option>
                                                <option value="In-Active">In-Active</option>
                                            </select>
                                      </div>
                                      <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                      </div>
                                    </div>
                                  </div>
                            </form>
                        </div>
                        <table id="cmsrecord" class="table bg-white rounded shadow-sm  table-hover">
                            <thead style="background-color: #F8F9FC;">
                                <tr>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.CmsPages){
                                <tr>
                                    <td>@item.Title</td>
                                        @if (item.Status == true)
                                        {
                                            <td style="color:#14C506">Active</td>
                                        }
                                        else
                                        {
                                            <td style="color:red">In-Active</td>
                                        }
                                        <td>
                                        <a type="button" class="border-0" onclick="cmsEdit(@item.CmsPageId)">
                                            <i class="bi bi-pencil-square text-warning"></i>
                                        </a>
                                            <a type="button" class="border-0 ms-2" onclick="cmsDelete(@item.CmsPageId)">
                                            <i class="bi bi-trash-fill text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");
        var dashboadtime=document.getElementById("dashboadtime");
        var myModal = document.getElementById("exampleModalcmsadd");
        var modalclose=document.getElementById("cmsclose");
        function currentTime() {
            var time = new Date();
            var dateString = time.toDateString();
            var timeString = time.toLocaleTimeString();
            dashboadtime.innerHTML = dateString + ' ' + timeString;
            let t = setTimeout(function () { currentTime() }, 1000);
        }
        currentTime();
        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };

        const menulink=document.querySelectorAll(".list-group-item");
        const contentSections = document.querySelectorAll('.content-section');

        menulink.forEach((link)=>{
            link.addEventListener('click',(event)=>{
                event.preventDefault();
                
                menulink.forEach((link) => {
            link.classList.remove('active');
            
          });
          link.classList.add('active');
          
            });
        });

        // cmstable
        $(document).ready(function () {
            $('#cmsrecord').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
        $('#cmsrecord').DataTable({
            "ordering": false,
            "lengthChange": false,
            "pagingType": "full_numbers",
            "oLanguage": {
                "sEmptyTable": " ",
                "oPaginate": {
                    "sNext": '<i class="bi bi-chevron-right"></i>',
                    "sPrevious": '<i class="bi bi-chevron-left"></i>',
                    "sFirst": '<i class="bi bi-chevron-double-left"></i>',
                    "sLast": '<i class="bi bi-chevron-double-right"></i>',
                }
            }
        });

       

        // cmsrecordbtn
        var cmsrecordFilter = document.getElementById("cmsrecord_filter");
        var button = document.createElement("button");
        button.innerHTML=`<i class="bi bi-plus">Add</i>`;
        button.classList.add("btn","btn-outline-warning","rounded-pill","addbtn");
        button.setAttribute("data-bs-toggle","modal");
        button.setAttribute("data-bs-target","#exampleModalcmsadd");
        button.setAttribute("id", "ExampleModalCmsAdd");
        cmsrecordFilter.appendChild(button);

        CKEDITOR.replace('editor1');

        modalclose.onclick = function () {

            myModal.style.display = "none";

        };
        
        function cmsEdit(cmsId){
            $.ajax({
                url:'/Admin/Admin/CmsEdit',
                type:'POST',
                data: { cmsId: cmsId },
                success:function(result){
                    myModal.classList.add("show");
                    myModal.style.display = "block";
                    document.getElementById("cmsid").value=result.cmsPageId;
                    document.getElementById("title").value = result.title;
                    CKEDITOR.instances['editor1'].setData(result.description);
                    document.getElementById("slug").value = result.slug;
                    if (result.status == true) {
                        document.getElementById("cmsstatus").value = "Active";
                    }
                    else{
                        document.getElementById("cmsstatus").value="In-Active";
                    }
                }
            })
        }
        var addbtn = document.getElementById("ExampleModalCmsAdd");
        addbtn.onclick=function(){
            document.getElementById("cmsid").value = '';
            document.getElementById("title").value = '';
            CKEDITOR.instances['editor1'].setData('');
            document.getElementById("slug").value = '';
            document.getElementById("cmsstatus").value = '';
        }
        function cmsDelete(cmsId){
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success ms-2',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false
            })

            swalWithBootstrapButtons.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel!',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Admin/CmsDelete',
                        type: 'POST',
                        data: { cmsId: cmsId },
                        success: function (result) {
                            swalWithBootstrapButtons.fire(
                                'Deleted!',
                                'Your record has been deleted.',
                                'success'
                            ).then((res) => {
                                location.reload();
                            });
                        }
                    });
                } else if (
                    /* Read more about handling dismissals below */
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire(
                        'Cancelled'
                    )
                }
            })
        }
    </script>
</body>

</html>