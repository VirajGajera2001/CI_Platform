@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPages;
    }
}
<div class="container">
                        <div class="row">
        @if (ViewBag.RecentVolunteering != null)
        {
            @foreach (var item in ViewBag.RecentVolunteering)
            {
                <div class="col-4 text-center">
                    <img src="@item.Avatar" alt="" class="volunimg">
                    <p>@item.FirstName</p>
                </div>
            }
        }
    </div>
                    </div>

<div class="container">
    @if (pager.TotalPage > 0)
    {
        <ul class="pagination justify-content-center">
            @if (pager.CurrentPages > 1)
            {
                <li class="page-item">
                    <a class="page-link" onclick="recentVol(pg=1,@ViewBag.Missions.MissionId)">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" onclick="recentVol(pg=@pager.CurrentPages-1,@ViewBag.Missions.MissionId)">Previous</a>
                </li>
            }

            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item@(pge==pager.CurrentPages?"active":"")">
                    <a class="page-link" onclick="recentVol(pg=@pge,@ViewBag.Missions.MissionId)">@pge</a>
                </li>
            }
            @if (pager.CurrentPages < pager.TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" onclick="recentVol(pg=@pager.CurrentPages+1,@ViewBag.Missions.MissionId)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" onclick="recentVol(pg=@pager.TotalPage,@ViewBag.Missions.MissionId)">Last</a>
                </li>
            }
        </ul>
    }
</div>